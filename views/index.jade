extends layout

block content
  div(class="row row-offcanvas row-offcanvas-right")
    div(class="col-xs-12 col-sm-9")
      table(ng-controller="PresencesListCtrl" class="table")
        caption Temporary solution
        thead
          tr
            th Id
            th Become present
            th Become absent
            th workday
            th worker id
        tbody
          tr(ng-repeat="presence in presences")
            td {{presence.id}}
            td {{presence.become_present}}
            td {{presence.become_absent}}
            td {{presence.workday}}
            td {{presence.worker_id}}
    div(class="col-xs-6 col-sm-3 sidebar-offcanvas" id="sidebar")
      div(class="list-group" ng-controller="WorkersListCtrl")
        a(ng-if="$first" ng-repeat="worker in workers" href="#" class="list-group-item active") {{worker.id}} {{worker.name}} {{worker.surname}}
        a(ng-if="!$first" ng-repeat="worker in workers" href="#" class="list-group-item") {{worker.id}} {{worker.name}} {{worker.surname}}



